    <%= form.label :sous_titre %>
    <%= form.text_area :media, class: "form-control h-63" %>
  </div>
<br>
  <div class="mb-6">
    <%= form.label :contenu %>
    <%= form.text_area :body, class: "form-control h-64" %>
  </div>
<br>
  <div class="mb-6">
    <%= form.label :auteur %>
    <%= form.text_area :author, class: "form-control h-63" %>
  </div>
<br><br>
  <div class="field">
    <%= form.label :image_pour_la_page_accueil %>
    <%= form.file_field :image %>
  </div>
<br>
  <div class="actions">
    <%= form.submit class: "btn btn-default"%>
  </div>
    </div>

<% end %>
